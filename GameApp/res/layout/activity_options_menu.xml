<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/betaback"
    tools:context=".OptionsMenu" >

    <TextView
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/hello_world"
        android:textSize="30sp" />

    <Button
        android:id="@+id/normal_button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hard_button"
        android:layout_alignBottom="@+id/hard_button"
        android:layout_toLeftOf="@+id/hard_button"
        android:text="Normal" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/hard_button"
        android:layout_marginBottom="17dp"
        android:text="Save" />

    <Button
        android:id="@+id/easy_button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/difficulty"
        android:layout_toLeftOf="@+id/normal_button"
        android:text="Easy" />

    <Button
        android:id="@+id/hard_button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/test"
        android:layout_marginRight="24dp"
        android:layout_marginTop="84dp"
        android:text="Hard" />

    <TextView
        android:id="@+id/difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/normal_button"
        android:layout_alignLeft="@+id/easy_button"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="18dp"
        android:text="Difficulty: "
        android:textSize="20sp" />

    <Button
        android:id="@+id/on_button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/off_button"
        android:layout_alignBottom="@+id/off_button"
        android:layout_alignLeft="@+id/music"
        android:layout_marginLeft="19dp"
        android:text="ON" />

    <Button
        android:id="@+id/off_button"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/save_button"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/on_button"
        android:text="OFF" />

    <TextView
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/on_button"
        android:layout_alignLeft="@+id/difficulty"
        android:layout_marginBottom="20dp"
        android:text="Music: "
        android:textSize="20sp" />

</RelativeLayout>